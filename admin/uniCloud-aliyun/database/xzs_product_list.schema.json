// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["title"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"title":{
			"title": "名称",
			"description": "请输入产品名称",
			"bsonType": "string"
		},
		"listId":{
			"title": "分类",
			"foreignKey": "xzs_product_nav._id",
			"enum":{
				"collection": "xzs_product_nav",
				"field": "_id as value, classname as text"
			}
		},
		"picurl":{
			"title": "茶品图",
			"bsonType": "file"
		},
		"orderid":{
			"title": "排序",
			"description": "请输入序号",
			"bsonType": "int"
		},
		"year":{
			"title": "年份",
			"trim": "both",
			"bsonType": "string",
			"description": "如:2017年"
		},
		"weight":{
			"title": "重量",
			"trim": "both",
			"bsonType": "string",
			"description": "如:266gx3"
		},
		"pronum":{
			"title": "型号",
			"trim": "both",
			"bsonType": "string",
			"description": "如:LM-202060"
		},
		"grade":{
			"title": "等级",
			"trim": "both",
			"bsonType": "string",
			"description": "如:LM-202060"
		},
		"price":{
			"title": "价格",
			"trim": "both",
			"bsonType": "string",
			"description": "如:2208/套"
		},
		"checked":{
			"title": "状态",
			"bsonType": "bool",
			"defaultValue":true,
			"description": "显示状态，默认是true显示，false不显示",
			"enum":[{
				
				"value":true,
				"text":"显示"
			},
			{
				"value":false,
				"text":"隐藏"

			}
			
			
			]
		},
		"createTime":{
			"title": "创建时间",
			"bsonType": "timestamp",
			"forceDefaultValue":{
				"$env": "now"
			}
		}
		
	}
}